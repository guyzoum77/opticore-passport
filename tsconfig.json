{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}